<Page x:Class="Expense_Tracker.View.SignupPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Expense_Tracker.View"
      mc:Ignorable="d" d:DesignWidth="800"
      Title="SignupPage"
      Foreground="White">
    <Page.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#00bb82" Offset="0"/>
            <GradientStop Color="#2683ff" Offset="1"/>
        </LinearGradientBrush>
    </Page.Background>
    <Grid VerticalAlignment="Center"
          HorizontalAlignment="Center"
          Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Welcome Section -->
        <StackPanel Grid.Row="0"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,25">

            <Image Source="/Resources/png/user1.png"
       Width="100"/>
            <TextBlock Text="Join ExpenseTracker"
                       FontWeight="Bold"
                       FontSize="26"
                       HorizontalAlignment="Center"/>

            <TextBlock Text="Start your financial freedom journey today"
                       Foreground="#a7e5df"
                       Margin="0,8,0,0"
                       HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Login Card -->
        <Border Grid.Row="1"
                Width="350"
                CornerRadius="20"
                Background="#26FFFFFF"
                Padding="25"
                HorizontalAlignment="Center">

            <StackPanel>

                <TextBlock Text="Create Account"
                           FontSize="22"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,5"/>

                <TextBlock Text="Get Started with your personal finance tracking"
                           Foreground="#a7e5df"
                           FontSize="12"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <!-- Name -->
                <StackPanel Margin="0,10,0,0">
                    <TextBlock Text="Full Name"
                               Foreground="#a7e5df"
                               Margin="0,0,0,5"/>

                    <Border CornerRadius="10"
                            Background="#30FFFFFF"
                            BorderBrush="#60FFFFFF"
                            BorderThickness="1">

                        <TextBox Padding="10"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Foreground="White"/>
                    </Border>
                </StackPanel>

                <!-- Email -->
                <StackPanel Margin="0,15,0,0">
                    <TextBlock Text="Email Address"
                               Foreground="#a7e5df"
                               Margin="0,0,0,5"/>

                    <Border CornerRadius="10"
                            Background="#30FFFFFF"
                            BorderBrush="#60FFFFFF"
                            BorderThickness="1">

                        <TextBox Padding="10"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Foreground="White"/>
                    </Border>
                </StackPanel>

                <StackPanel Margin="0,15,0,0">
                    <TextBlock Text="Password"
                               Foreground="#a7e5df"
                               Margin="0,0,0,5"/>

                    <Border CornerRadius="10"
                            Background="#30FFFFFF"
                            BorderBrush="#60FFFFFF"
                            BorderThickness="1">

                        <PasswordBox Padding="10"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Foreground="White"/>
                    </Border>
                </StackPanel>

                <StackPanel Margin="0,15,0,0">
                    <TextBlock Text="Confirm Password"
                               Foreground="#a7e5df"
                               Margin="0,0,0,5"/>

                    <Border CornerRadius="10"
                            Background="#30FFFFFF"
                            BorderBrush="#60FFFFFF"
                            BorderThickness="1">

                        <PasswordBox Padding="10"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Foreground="White"/>
                    </Border>
                </StackPanel>


                <Button Content="Create Account →"
                    Height="40"
                    Margin="0,25,0,0"
                    Background="White"
                    Foreground="Black"
                    BorderThickness="0"
                    FontWeight="Bold">

                    <Button.Template>
                        <ControlTemplate TargetType="Button">

                            <Border x:Name="border"
                                CornerRadius="20"
                                Background="{TemplateBinding Background}"
                                Padding="10">

                                <ContentPresenter HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                            </Border>

                            <ControlTemplate.Triggers>

                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border"
                            Property="Background"
                            Value="#f2f2f2"/>
                                </Trigger>

                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border"
                            Property="Background"
                            Value="#dddddd"/>
                                </Trigger>

                            </ControlTemplate.Triggers>

                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="Already have an account?"
                               Foreground="#a7e5df"/>
                    <TextBlock Text="Sign in insted"
                               Margin="3 0 0 0"
                               FontWeight="SemiBold"
                               Cursor="Hand"/>
                </StackPanel>

            </StackPanel>


        </Border>

    </Grid>
</Page>
