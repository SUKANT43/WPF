<Page x:Class="Expense_Tracker.View.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Expense_Tracker.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" 
      d:DesignWidth="800"
      Title="LoginPage"
      Foreground="White">

    <!-- Background Gradient -->
    <Page.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#665eff" Offset="0"/>
            <GradientStop Color="#ef38a4" Offset="1"/>
        </LinearGradientBrush>
    </Page.Background>

    <!-- Main Layout -->
    <Grid VerticalAlignment="Center"
          HorizontalAlignment="Center"
          Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Welcome Section -->
        <StackPanel Grid.Row="0"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,25">
            
            <Image Source="/Resources/png/user1.png"
       Width="100"/>

            <TextBlock Text="Welcome Back"
                       FontWeight="Bold"
                       FontSize="26"
                       HorizontalAlignment="Center"/>

            <TextBlock Text="Continue your financial journey"
                       Foreground="#e4cdff"
                       Margin="0,8,0,0"
                       HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Login Card -->
        <Border Grid.Row="1"
                Width="350"
                CornerRadius="20"
                Background="#26FFFFFF"
                Padding="25"
                HorizontalAlignment="Center">

            <StackPanel>

                <TextBlock Text="Sign In"
                           FontSize="22"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,5"/>

                <TextBlock Text="Access your expense tracker dashboard"
                           Foreground="#e4cdff"
                           FontSize="12"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <!-- Email -->
                <StackPanel Margin="0,10,0,0">
                    <TextBlock Text="Email Address"
                               Foreground="#e4cdff"
                               Margin="0,0,0,5"/>

                    <Border CornerRadius="10"
                            Background="#30FFFFFF"
                            BorderBrush="#60FFFFFF"
                            BorderThickness="1">

                        <TextBox Padding="10"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Foreground="White"/>
                    </Border>
                </StackPanel>

                <!-- Password -->
                <StackPanel Margin="0,15,0,0">
                    <TextBlock Text="Password"
                               Foreground="#e4cdff"
                               Margin="0,0,0,5"/>

                    <Border CornerRadius="10"
                            Background="#30FFFFFF"
                            BorderBrush="#60FFFFFF"
                            BorderThickness="1">

                        <PasswordBox Padding="10"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Foreground="White"/>
                    </Border>
                </StackPanel>
                <Button Content="Sign In →"
                    Height="40"
                    Margin="0,25,0,0"
                    Background="White"
                    Foreground="Black"
                    BorderThickness="0"
                    FontWeight="Bold">

                    <Button.Template>
                        <ControlTemplate TargetType="Button">

                            <Border x:Name="border"
                    CornerRadius="20"
                    Background="{TemplateBinding Background}"
                    Padding="10">

                                <ContentPresenter HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                            </Border>

                            <ControlTemplate.Triggers>

                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border"
                            Property="Background"
                            Value="#f2f2f2"/>
                                </Trigger>

                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border"
                            Property="Background"
                            Value="#dddddd"/>
                                </Trigger>

                            </ControlTemplate.Triggers>

                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="Don't have an account?"
                               Foreground="#e4cdff"/>
                    <TextBlock Text="Create one now"
                               Margin="3 0 0 0"
                               FontWeight="SemiBold"
                               Cursor="Hand"/>
                </StackPanel>

            </StackPanel>

            
        </Border>
        
    </Grid>

</Page>