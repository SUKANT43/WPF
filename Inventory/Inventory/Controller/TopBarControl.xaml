<UserControl x:Class="Inventory.Controller.TopBarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Inventory.Controller"
             mc:Ignorable="d" >
    <Grid>
            <TextBlock Text="Inventory Management" 
                       HorizontalAlignment="Center" 
                       FontSize="25"
                       FontWeight="Bold"/>
        <StackPanel MouseDown="Theme_Button_Press" HorizontalAlignment="Right" Margin="0 0 20 0">
            <Image Source="{DynamicResource ThemeImage}"
       Width="50"
       Height="50"
       Stretch="UniformToFill"/>
        </StackPanel>
           
    </Grid>
</UserControl>
