<UserControl x:Class="Dependency.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Dependency"
             mc:Ignorable="d" >
    <Border Padding="10" Background="LightGray" Width="200" Height="100">
        <TextBlock
    Text="{Binding TitleText,RelativeSource={RelativeSource AncestorType=UserControl}}"/>
    </Border>
</UserControl>
