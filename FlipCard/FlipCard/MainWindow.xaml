<Window x:Class="FlipCard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlipCard"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        xmlns:control="clr-namespace:FlipCard.Controls">
    <Grid Background="#1f2b43">
        <control:ProductDisplayCard ProductName="Apple Watch Series 7 Steel"
                                    ImageSource="FlipCard;component\Image\apple.png"
                                    OfferedPrice="29999"
                                    OriginalPrice="39999"
                                    HorizontalAlignment="Left"
                                    OfferPercentage="25"
                                    RatingCount="3595"
                                    IsPriceIncreased="True"
                                    IsOutOfStock="False"
                                    />

    </Grid>
</Window>
