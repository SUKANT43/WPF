<UserControl x:Class="StickyNotes.Control.TopBarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StickyNotes.Control"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="800" Background="{DynamicResource AppBackGround}" FontSize="30" FontWeight="Bold" Foreground="{DynamicResource TextColor}">
    <Grid MouseLeftButtonDown="Grid_MouseLeftButtonDown">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Button Content="+"
                Style="{StaticResource transperentButton}"
                FontSize="30"
                FontWeight="Bold"
                Width="40"
                Background="Transparent"
                Foreground="{DynamicResource OptionColor}"
                HorizontalAlignment="Left"
               
                BorderThickness="0"
                Margin="0 0 0 0"/>

        <StackPanel Grid.Column="1"
                    Orientation="Horizontal">

            <!--<Button Content="⚙"
                    Style="{DynamicResource transperentButton}"
                    BorderThickness="0"
                    Width="40"
                       FontSize="20"
                    />-->

            <Image Source="{DynamicResource ThemeImage}"
           Width="50"
           Height="50"
           Stretch="UniformToFill" VerticalAlignment="Center"
                       Margin="0 10 10 0"/>


            <Button Content="✕"
                        Style="{DynamicResource transperentButton}"
                    Width="40"
                    Background="Transparent" 
                   
                    FontSize="20"
                    BorderThickness="0"
                    Foreground="{DynamicResource OptionColor}" 
                    Click="Close_Application_Click"
                    />
        </StackPanel>

    </Grid>
</UserControl>
