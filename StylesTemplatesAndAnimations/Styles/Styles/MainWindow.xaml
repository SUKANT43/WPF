                        </Border>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>-->


        
        

    </Window.Resources>
    <StackPanel>
        <Button Style="{StaticResource PrimaryButton}" Content="Button" Width="100"/>
        <Button Content="Hello" Style="{StaticResource SecondaryButton}"/>
        <Button Content="Hi" Style="{StaticResource btn}"/>
        <!--<TextBlock Text="uhfiewrhfuyewbgbgt4" Style="{StaticResource SecondaryTextBox}"/>-->
        <Button Content="Text" Background="Blue">
            <Button.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                     From="0" To="1" Duration="0:0:1"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Button.Triggers>
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" CornerRadius="20">
                        <ContentPresenter
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>


        <Button Content="Text">

            <Button.Background>
                <SolidColorBrush Color="Red"/>
            </Button.Background>

            <Button.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <ColorAnimation
                        Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)"
                        To="Green"
                        Duration="0:0:5"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Button.Triggers>

        </Button>

        <Grid>
            <Grid.RenderTransform>
                <TranslateTransform x:Name="move"/>
            </Grid.RenderTransform>
            <Grid.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation
                                Storyboard.TargetName="move"
                                Storyboard.TargetProperty="X"
                                From="-300" To="0"
                                Duration="0:0:20"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Grid.Triggers>
        </Grid>


    </StackPanel>
</Window>
