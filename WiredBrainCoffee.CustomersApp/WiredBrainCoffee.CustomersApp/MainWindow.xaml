<Window x:Class="WiredBrainCoffee.CustomersApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:WiredBrainCoffee.CustomersApp.Controls"
        xmlns:model="clr-namespace:WiredBrainCoffee.CustomersApp.Model"
        Title="Coffee Customers"
        Width="600"
        Height="400"
        Background="#EEEEEE">
    <Window.Resources>
        <model:Customer x:Key="customerA" FirstName="wret" LastName="C" IsDeveloper="True"/>
        <model:Customer  x:Key="customerB" FirstName="erret" LastName="C" IsDeveloper="True"/> 
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.ColumnSpan="3"
                    Background="#F05A28">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Image Source="C:\Users\SEZ-A4\Desktop\Wpf\WPF\WiredBrainCoffee.CustomersApp\WiredBrainCoffee.CustomersApp\Images/logo.png"
                   Height="90"
                   Margin="5"/>
                <TextBlock Text="Coffee Customers"
                       FontSize="30"
                       FontWeight="ExtraBold"
                       Foreground="White"
                       VerticalAlignment="Bottom"
                       Margin="20"/>
                <TextBlock Text="Version 1.0"
                       Foreground="#333333"
                       VerticalAlignment="Bottom"
                       Margin="0,0,0,25"/>
            </StackPanel>
           
        </StackPanel>

        <!-- Customer list -->
        <Grid Grid.Row="1"
              x:Name="customerListGrid"
              Background="#EEEEEE">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal">
                <Button Margin="10"
                        Click="ButtonMove_Click">
                    <TextBlock Text="Move"/>
                </Button>

                <Button Margin="10"
                        Click="ButtonAddCustomer_Click">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Add"/>
                    </StackPanel>
                </Button>

                <Button Margin="10"
                        Click="ButtonDeleteCustomer_Click">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Delete"/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <ListView Grid.Row="1"
                      x:Name="customerListView"
                      DisplayMemberPath="FirstName"
                      SelectionChanged="CustomerListView_SelectionChanged"/>
        </Grid>

        <!-- Customer detail -->
        <controls:CustomerDetailControl
            Grid.Row="1"
            Grid.Column="1"
            x:Name="customerDetailControl" Margin="17,0,17,6" 
          />
        <!--<controls:CustomerDetailControl.Customer>-->
        <!--<model:Customer FirstName="Sukant" LastName="C" IsDeveloper="True"/>-->
        <!--</controls:CustomerDetailControl.Customer>-->

    </Grid>
</Window>
