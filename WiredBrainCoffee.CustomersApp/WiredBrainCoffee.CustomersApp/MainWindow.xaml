<Window x:Class="WiredBrainCoffee.CustomersApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:WiredBrainCoffee.CustomersApp.Controls"
        Title="Coffee Customers"
        Width="600"
        Height="400"
        Background="{DynamicResource AppBackgroundBrush}"
        Foreground="{DynamicResource AppForegroundBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Grid.ColumnSpan="3"
                    Background="#F05A28">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Coffee Customers"
                           FontSize="30"
                           FontWeight="ExtraBold"
                           Foreground="White"
                           Margin="20"/>
                <TextBlock Text="Version 1.0"
                           Foreground="#333333"
                           Margin="0,0,0,25"/>
            </StackPanel>
        </StackPanel>

        <Grid Grid.Row="1"
              x:Name="customerListGrid"
              Background="{DynamicResource AppBackgroundBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal">
                <Button Margin="10" Click="ButtonMove_Click" Content="Move"/>
                <Button Margin="10" Click="ButtonAddCustomer_Click" Content="Add"/>
                <Button Margin="10" Click="ButtonDeleteCustomer_Click" Content="Delete"/>
                <Button Margin="10" Click="ToggleTheme_Click" Content="Change Theme"/>
            </StackPanel>

            <ListView Grid.Row="1"
                      x:Name="customerListView"
                      Background="{DynamicResource AppBackgroundBrush}"
                      Foreground="{DynamicResource AppForegroundBrush}"
                      DisplayMemberPath="FirstName"
                      />
        </Grid>

        <controls:CustomerDetailControl
            x:Name="customerDetailControl"
            Grid.Row="1"
            Grid.Column="1"
            Margin="17,0,17,6"
            Customer="{Binding ElementName=customerListView,Path=SelectedItem,Mode=OneWay}"/>
    </Grid>
</Window>
