<Window x:Class="MvvmBasics.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MvvmBasics"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="20">
        <TextBox Height="30"
         Text="{Binding Content, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

        <Button Height="30" Margin="0,10,0,0"
                Content="Save"
                Click="Button_Click"/>

        <TextBlock Text="{Binding Content}"/>

        <DataGrid ItemsSource="{Binding Lst}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" />
                <DataGridTextColumn Header="Content" Binding="{Binding Content}" />
            </DataGrid.Columns>
        </DataGrid>



    </StackPanel>

</Window>
