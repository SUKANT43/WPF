<Window x:Class="RoutedEvents.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RoutedEvents"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Button.Click="Bubbling_Panel_Click" Width="100" Height="50" VerticalAlignment="Top">
            <Button Click="Bubbling_Button_Click" Content="Bubbling Event"/>
        </StackPanel>


        <StackPanel PreviewMouseDown="Tunneling_Panel_Mouse_Down" Width="100" Height="50" VerticalAlignment="Center">
            <Button Content="Tunneling Event" PreviewMouseDown="Tunneling_Button_Mouse_Down"/>
        </StackPanel>

        <StackPanel Width="100" Height="50" VerticalAlignment="Bottom">
            <TextBox TextChanged="Direct_Text_Changed"/>
        </StackPanel>
        
    </Grid>
</Window>
