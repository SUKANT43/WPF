<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:ResourcesAndResourceDictionary.Resources">

    <Color x:Key="WindowBgColor">#FFFFFFFF</Color>
    <Color x:Key="PrimaryColor">#FF2196F3</Color>

    <SolidColorBrush x:Key="WindowBackGround" Color="{StaticResource WindowBgColor}"/>

    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>

</ResourceDictionary>