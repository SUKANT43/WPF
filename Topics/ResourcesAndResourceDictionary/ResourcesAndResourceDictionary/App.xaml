<Application x:Class="ResourcesAndResourceDictionary.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ResourcesAndResourceDictionary"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            
            
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/LightTheme.xaml"/>
                <ResourceDictionary Source="Resources/ColorsAndStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <Style TargetType="TextBlock" x:Key="CustomTextBlock">
                <Setter Property="Foreground" Value="Black"/>
                <Setter Property="Background" Value="Black"/>
            </Style>


        </ResourceDictionary>
    </Application.Resources>
</Application>
