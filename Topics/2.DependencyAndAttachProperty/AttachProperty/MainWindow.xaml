<Window x:Class="AttachProperty.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AttachProperty.Helpers"
        xmlns:controller="clr-namespace:AttachProperty.Controllers"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Content="HighLighted" local:HighlightHelper.IsHighlighted="True"/>
            <Button Content="Not Highlighted" x:Name="bt2" local:HighlightHelper.IsHighlighted="False"/>
            <Button Content="Not Highlighted" x:Name="bt3"/>
        </StackPanel>

        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center">
            <TextBox Width="100" Background="Aquamarine" Text="{Binding Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <controller:TextBox Text="{Binding Text , Mode=TwoWay}"/>
        </StackPanel>
        
    </Grid>
</Window>
